{
    "include": [
        "src/**/*/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "types": ["angular", "toastr", "angular-route", "angular-ui-bootstrap"],
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "lib": [ "dom", "es2015" ],
        "strict": false,
        "noImplicitAny": false
    },
    "compileOnSave": true
}